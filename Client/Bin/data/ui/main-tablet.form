form:
  id: main
  size: [100%, 100%]
  style: Empty
  batchingEnabled: false
  theme: ui/default-tablet.theme

  ${iconScale}: 2.0
  ${iconScaleHalf}: 1.0
  ${H3Size}: 20
  ${sideBarWidth}: 250.0
  ${bottomBarWidth}: 640.0
  ${fontSize}: 16  # this should math fontSize of the Theme

  button:
  - id: sidebarToggleButton
    x: ${sideBarWidth}
    y: 30
    text: "<<"

  container:
  - id: sidebarControls
    alignment: ALIGN_TOP_LEFT
    style: Form
    consumeInputEvents: true
    height: 100%
    width: ${sideBarWidth}
    scroll: SCROLL_VERTICAL
    scrollBarsAutoHide: false

    container:
      width: 100%
      layout: LAYOUT_VERTICAL
      alignment: ALIGN_TOP_LEFT

      container:
      - layout: LAYOUT_VERTICAL
        width: 100%

        label:
        - text: UI_tube_generator
          style: TitleLabel

        slider:
        - id: chiralityA1Slider
          width: 100%
          min: 2
          max: 20
          value: 2
          step: 1
          text: UI_chiralityA1
          orientation: HORIZONTAL
          valueTextVisible: true
        - id: chiralityA2Slider
          width: 100%
          min: 0
          max: 20
          value: 0
          step: 1
          text: UI_chiralityA2
          orientation: HORIZONTAL
          valueTextVisible: true
        - id: tubeHeightSlider
          width: 100%
          min: 2
          max: 20
          value: 2
          step: 1
          text: UI_tube_height
          orientation: HORIZONTAL
          valueTextVisible: true
        - id: tubeTransitionSlider
          width: 100%
          min: 0
          max: 100
          value: 100
          step: 1
          text: UI_tube_transition
          orientation: HORIZONTAL
          valueTextVisible: true

      container:
      - layout: LAYOUT_VERTICAL
        width: 100%
        margin: {top: 20}

        button:
          id: saveButton
          width: 100%
          text: UI_save

      container:
      - layout: LAYOUT_VERTICAL
        width: 100%
        margin: {top: 20}

        container:
        - width: 100%
          layout: LAYOUT_VERTICAL
          label:
          - text: UI_bbox
            style: TitleLabel
        - layout: LAYOUT_HORIZONTAL
          width: 100%
          label:
            text: UI_extent
            width: 50%
            style: H2Label
          textBox:
          - id: bboxExtent
            width: 50%
            text: 0
        - width: 100%
          layout: LAYOUT_VERTICAL
          label:
          - id: bboxMinLabel
            style: H2Label
          - id: bboxMaxLabel
            style: H2Label

      container:
      - layout: LAYOUT_VERTICAL
        width: 100%
        margin: {top: 20}

        label:
        - text: UI_segments
          style: H2Label

        container:
          layout: LAYOUT_HORIZONTAL
          width: 100%
          textBox:
          - id: bboxXCount
            width: 33%
            text: 100
          - id: bboxYCount
            width: 33%
            text: 100
          - id: bboxZCount
            width: 33%
            text: 100

        button:
          id: saveCubeButton
          width: 100%
          text: UI_save_cube

