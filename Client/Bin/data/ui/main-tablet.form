form:
  id: main
  size: [100%, 100%]
  style: Empty
  batchingEnabled: false
  theme: ui/default-tablet.theme

  ${iconScale}: 2.0
  ${iconScaleHalf}: 1.0
  ${H3Size}: 20
  ${sideBarWidth}: 250.0
  ${bottomBarWidth}: 640.0
  ${fontSize}: 16  # this should math fontSize of the Theme

  button:
  - id: sidebarToggleButton
    x: ${sideBarWidth}
    y: 30
    text: "<<"

  container:
  - id: sidebarControls
    alignment: ALIGN_TOP_LEFT
    style: Form
    consumeInputEvents: true
    height: 100%
    width: ${sideBarWidth}
    scroll: SCROLL_VERTICAL
    scrollBarsAutoHide: false

    container:
      width: 100%
      layout: LAYOUT_VERTICAL
      alignment: ALIGN_TOP_LEFT

      container:
      - layout: LAYOUT_VERTICAL
        width: 100%

        label:
        - text: UI_tube_generator
          style: TitleLabel

        slider:
        - id: chiralityA1Slider
          width: 100%
          min: 2
          max: 20
          value: 2
          step: 1
          text: UI_chiralityA1
          orientation: HORIZONTAL
          valueTextVisible: true
        - id: chiralityA2Slider
          width: 100%
          min: 0
          max: 20
          value: 0
          step: 1
          text: UI_chiralityA2
          orientation: HORIZONTAL
          valueTextVisible: true
        - id: tubeHeightSlider
          width: 100%
          min: 2
          max: 20
          value: 2
          step: 1
          text: UI_tube_height
          orientation: HORIZONTAL
          valueTextVisible: true
